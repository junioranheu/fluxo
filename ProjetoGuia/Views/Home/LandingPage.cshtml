@{
    Layout = "";

    string nomeApp = ProjetoGuia_Biblioteca.Biblioteca.nomeApp;
    string sloganApp = ProjetoGuia_Biblioteca.Biblioteca.sloganApp;
    string keywordsApp = ProjetoGuia_Biblioteca.Biblioteca.keywordsApp;

    // Título aleatório;
    var r = new Random();
    var listaTitulos = new List<string> {
       "descobrir um novo bar",
       "encontrar uma nova hambúrgueria",
       "ir à uma nova balada",
       "encontrar uma sorveteria",
       "saber o que tem de bom no centro",
       "descobrir onde !importantomprar o beck maneiro"
    };

    int index = r.Next(listaTitulos.Count);
